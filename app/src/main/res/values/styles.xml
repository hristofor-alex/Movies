<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="smallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@color/color_star_empty</item>
        <item name="android:progressTint">@color/color_star_full</item>
        <item name="android:secondaryProgressTint">@color/color_star_full</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>

    </style>


</resources>